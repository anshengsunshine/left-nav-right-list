/* pages/category/category.wxss */
.furnitures {
  width: 750rpx;
  height: 1200rpx;
  justify-content: space-around;
}

.search {
  padding: 20rpx;
}

.search-text {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}

.search-text icon {
  margin-right: 10rpx;
}

/*left*/

.furnitures-left {
  width: 25%;
  padding-top: 20rpx;
  height: 100%;
  background-color: rgba(217, 217, 217, 0.3);
}

.furnitures-left view {
  box-sizing: border-box;
  width: 100%;
  display: block;
  line-height: 60rpx;
  font-size: 24rpx;
  padding-left: 5rpx;
}

.furnitures-left text {
  padding-left: 15rpx;
}

.active {
  background-size: 5rpx 60rpx;
}

.active text {
  display: block;
  background-color: #fff;
}

/*right*/

.goods-right {
  float: right;
  margin-top: -160%;
}

.furnitures-right {
  width: 75%;
  box-sizing: border-box;
  padding: 20rpx 5% 0 5%;
}

.rcmd-furniture .navigator {
  width: 100%;
}

.rcmd-furniture image {
  width: 100%;
  height: 160rpx;
}

.furList {
  font-size: 24rpx;
  line-height: 48rpx;
  padding-top: 30rpx;
}

.furList .goods-img {
  width: 120rpx;
  height: 120rpx;
}

.furList text {
  display: block;
  color: #000;
  text-align: center;
}

.furList .navigator {
  color: #999;
  display: inline-block;
  padding: 0 20rpx;
  margin: 10px 0;
}
